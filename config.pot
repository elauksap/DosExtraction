############################################################
## Configuration file
############################################################

# Input filenames.
input_params  = input_params.csv
input_experim = input_experim.csv

# Input files contain headers definition: 1 = true, 0 = false.
hasHeaders = 1

# Simulate each row in the input_params file: 1 = true, 0 = false.
simulate_all = 0

	# If "simulate_all = 0", set indexes of rows to simulate.
	indexes = '1 6'

# Number of threads to be used for a parallel simulation.
nThreads = 10

# The directory where output files must be saved.
output_directory = ./output

[GaussHermite]
# Gauss-Hermite quadrature rule.

	# Number of nodes.
	nNodes = 101

	# Max no. of iterations for iterative algorithm used to compute nodes and weights.
	maxIterationsNo = 1000

	# Tolerance for iterative algorithm used to compute nodes and weights.
	tolerance = 1.0e-14

[NLP]
# Newton solver for non-linear Poisson equation.

	# Max no. of iterations.
	maxIterationsNo = 1

	# Tolerance.
	tolerance = 1.0e-4